<div class="container">
  <div class="row">
    <div class="col-5">
      <h2>Create new restaurant</h2>
      <%= simple_form_for(@restaurant) do |f| %>
        <div class="form-group">
          <%= f.input :name %>
        </div>
        <div class="form-group">
          <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"], input_html: { multiple: false } %>
        </div>
        <div class="form-group">
          <%= f.input :phone_number %>
        </div>
        <div class="form-group">
          <%= f.input :address %>
        </div>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
