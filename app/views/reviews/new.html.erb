<div class="container">
  <div class="row">
    <div class="col-5">
      <h2>Create new review for <em>@restaurant</em></h2>
      <%= simple_form_for([@restaurant, @review]) do |f| %>
        <div class="form-group">
          <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5], input_html: { multiple: false } %>
        </div>
        <div class="form-group">
          <%= f.input :content %>
        </div>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
